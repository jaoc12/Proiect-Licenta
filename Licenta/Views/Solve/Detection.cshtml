@model Licenta.Models.Sudoku
@{
    ViewBag.Title = "Detected Sudoku";
}

<br />
<br />
<p>Am gasit urmatorul Sudoku in poza, daca doresti poti modifica valorile gasite.</p>

@using (Html.BeginForm(actionName: "Solution", controllerName: "Solve"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <div class="container">
        @for (int i = 0; i < 9; i++)
        {
            <div class="row">
                @for (int j = 0; j < 9; j++)
                {
                    <div class="col-sm-1 px-0">
                        @{
                            @Html.EditorFor(s => Model.Grid[i*9+j],
                           new { htmlAttributes = new { @class = "form-control" } })
                        }
                    </div>
                }
            </div>
        }
    </div>

    <button class="btn btn-primary" type="submit">Solutie</button>
}
<br />